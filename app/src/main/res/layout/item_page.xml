<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvSplashTitleFirstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/Splash_Screen_Title"/>

    <TextView
        android:id="@+id/tvSplashTitleSecondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSplashTitleFirstLine"
        android:layout_centerInParent="true"
        style="@style/Splash_Screen_Title"/>

    <TextView
        android:id="@+id/tvSplashDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSplashTitleSecondLine"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:lineSpacingMultiplier="1.2"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/grey_blue"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/tvSplashTitleFirstLine"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher_round"
        android:clickable="true"
        android:focusable="true" />
</RelativeLayout>